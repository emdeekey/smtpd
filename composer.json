{
    "name": "thefox/smtpd",
    "description": "SMTP server (library) written in pure PHP.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "smtp",
        "email",
        "mail",
        "server",
        "daemon"
    ],
    "homepage": "https://fox21.at",
    "authors": [
        {
            "name": "Christian Mayer",
            "email": "christian@fox21.at",
            "homepage": "https://fox21.at"
        }
    ],
    "require": {
        "php": "^7.0||^8.1",
        "zendframework/zend-mail": "^2.3",
        "symfony/options-resolver": "^6.3",
        "psr/log": "^3.0",
        "thefox/network": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "phpmailer/phpmailer": "^5.2",
        "phpstan/phpstan": "^1.10",
        "monolog/monolog": "^3.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "TheFox\\Smtp\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TheFox\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x.x-dev"
        }
    },
    "repositories": [
        { "type": "vcs", "url": "https://github.com/emdeekey/network" }
    ]
}
